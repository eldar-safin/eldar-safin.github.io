name: Загрузка в GitHub Pages

on:
  # Процесс запускается при изменениях в ветке main
  push:
    branches: ['main']
  # Разрешить запуск вручную из вкладки Actions
  workflow_dispatch:

# Разрешить чтение репозитория и внесение изменений в GitHub Pages
permissions:
  contents: read
  pages: write
  id-token: write

# Новый процесс деплоя в группу pages прервет уже запущенный процесс
concurrency:
  group: 'pages'
  cancel-in-progress: true

jobs:
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      - name: Загрузка репозитория в $GITHUB_WORKSPACE
        uses: actions/checkout@v4

      - name: Установка Node.js
        uses: actions/setup-node@v4
        with:
          node-version: lts/*
          cache: 'npm'

      - name: Установка зависимостей проекта
        run: npm ci

      - name: Сборка проекта
        run: npm run build

      - name: Настройка GitHub Pages
        uses: actions/configure-pages@v5

      - name: Сборка артифакта из ./dist
        uses: actions/upload-pages-artifact@v3
        with:
          path: './dist'

      - name: Загрузка артифакта в GitHub Pages (магия)
        id: deployment
        uses: actions/deploy-pages@v4
